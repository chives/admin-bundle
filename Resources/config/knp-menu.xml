<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="admin.menu.knp.builder.class">FSi\Bundle\AdminBundle\Menu\KnpMenu\MenuBuilder</parameter>
        <parameter key="admin.menu.knp.decorator.chain.class">FSi\Bundle\AdminBundle\Menu\KnpMenu\ItemDecoratorChain</parameter>
        <parameter key="admin.menu.knp.decorator.label.class">FSi\Bundle\AdminBundle\Menu\KnpMenu\ItemLabelDecorator</parameter>
        <parameter key="admin.menu.knp.decorator.attributes.class">FSi\Bundle\AdminBundle\Menu\KnpMenu\ItemAttributesDecorator</parameter>
        <parameter key="admin.menu.knp.decorator.route.class">FSi\Bundle\AdminBundle\Menu\KnpMenu\ItemRouteDecorator</parameter>
        <parameter key="admin.menu.knp.decorator.elements.class">FSi\Bundle\AdminBundle\Menu\KnpMenu\ItemElementsDecorator</parameter>
        <parameter key="admin.menu.knp.class">Knp\Menu\ItemInterface</parameter>
        <parameter key="admin.menu.knp.voter.element.class">FSi\Bundle\AdminBundle\Menu\KnpMenu\ElementVoter</parameter>
    </parameters>

    <services>
        <service id="admin.menu.knp.decorator.chain" class="%admin.menu.knp.decorator.chain.class%">
            <argument type="collection"></argument>
        </service>

        <service id="admin.menu.knp.decorator.label" class="%admin.menu.knp.decorator.label.class%">
            <tag name="admin.menu.knp_decorator" />
        </service>

        <service id="admin.menu.knp.decorator.attributes" class="%admin.menu.knp.decorator.attributes.class%">
            <tag name="admin.menu.knp_decorator" />
        </service>

        <service id="admin.menu.knp.decorator.route" class="%admin.menu.knp.decorator.route.class%">
            <argument type="service" id="router" />
            <tag name="admin.menu.knp_decorator" />
        </service>

        <service id="admin.menu.knp.decorator.elements" class="%admin.menu.knp.decorator.elements.class%">
            <tag name="admin.menu.knp_decorator" />
        </service>

        <service id="admin.menu.knp.builder" class="%admin.menu.knp.builder.class%">
            <argument type="service" id="knp_menu.factory"/>
            <argument type="service" id="admin.menu.knp.decorator.chain"/>
        </service>

        <service id="admin.menu.main" class="%admin.menu.knp.class%">
            <factory service="admin.menu.knp.builder" method="createMenu"/>
            <argument type="service" id="admin.menu.builder.main"/>
            <tag name="knp_menu.menu" alias="fsi_admin.menu.main"/>
        </service>

        <service id="admin.menu.tools" class="%admin.menu.knp.class%">
            <factory service="admin.menu.knp.builder" method="createMenu"/>
            <argument type="service" id="admin.menu.builder.tools"/>
            <tag name="knp_menu.menu" alias="fsi_admin.menu.tools"/>
        </service>

        <service id="admin.menu.knp.voter.element" class="%admin.menu.knp.voter.element.class%">
            <argument type="service" id="admin.manager" />
            <argument type="service" id="request_stack"/>
            <tag name="knp_menu.voter" />
        </service>
    </services>
</container>
